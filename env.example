# 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 服务器配置
NODE_ENV=production
PORT=3000

# JWT密钥（生产环境务必修改为随机字符串）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 华为云镜像仓库配置
HUAWEI_CLOUD_REGISTRY=swr.cn-north-4.myhuaweicloud.com
HUAWEI_CLOUD_NAMESPACE=personal-blog
HUAWEI_CLOUD_IMAGE=blog-app

# 数据库配置（V2.0将启用）
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=personal_blog
# DB_USER=admin
# DB_PASSWORD=password

# 日志配置
LOG_LEVEL=info

# 跨域配置
CORS_ORIGIN=*

# 文件上传配置（V2.0将启用）
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=/app/uploads

